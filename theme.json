{
	"version": 2,
	"$schema": "https://schemas.wp.org/wp/6.2/theme.json",
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [ "page", "post" ]
		},
		{
			"name": "landing-page",
			"title": "Landing Page",
			"postTypes": [ "page" ]
		}
	],
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [ "#3626a7", "#fae8e8" ],
					"slug": "blue-and-lavender",
					"name": "Blue and Lavender"
				},
				{
					"colors": [ "#ffffff", "#fae8e8" ],
					"slug": "white-and-lavender",
					"name": "White and Lavender"
				}
			],
			"palette": [
				{
					"color": "#FAE8E8",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#39414D",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#3626A7",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#F02D3A",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#ffffffe9",
					"name": "White Semi-trasparent",
					"slug": "white-semi-trasparent"
				}
			]
		},
		"custom": {
			"formInput": {
				"color": "var:preset|color|contrast",
				"background": "var:preset|color|white",
				"borderColor": "var:preset|color|base"
			},
			"jetpackTestimonial": {
				"borderRadius": "0px",
				"tileBorderRadius": "20px",
				"tileBackground": "var:preset|color|white",
				"width": "var(--wp--style--global--wide-size)"
			}
		},
		"layout": {
			"contentSize": "700px",
			"wideSize": "1440px"
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Lato",
					"slug": "lato",
					"fontFace": [
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/lato_normal_300.ttf"
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/lato_italic_300.ttf"
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/lato_normal_400.ttf"
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/lato_italic_400.ttf"
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/lato_normal_700.ttf"
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/lato_italic_700.ttf"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"name": "Tiny",
					"slug": "tiny",
					"size": "0.75rem"
				},
				{
					"name": "Small",
					"slug": "small",
					"size": "0.8rem"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "1rem"
				},
				{
					"name": "Display",
					"slug": "display",
					"size": "1.2rem"
				},
				{
					"fluid": {
						"min": "1.75rem",
						"max": "1.875rem"
					},
					"name": "Large",
					"slug": "large",
					"size": "1.875rem"
				},
				{
					"name": "Extra Large",
					"slug": "x-large",
					"size": "2rem"
				},
				{
					"name": "Extra Extra Large",
					"slug": "xx-large",
					"size": "clamp(1.1rem, 15vw, 3.5rem)"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/pullquote": {
				"elements": {
					"cite": {
						"typography": {
							"fontWeight": "500"
						}
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|large",
					"fontWeight": "600"
				}
			},
			"core/quote": {			
				"border": {
					"width": "0 0 0 8px"
				},
				"spacing": {
					"padding": {
						"bottom": "var:preset|spacing|30",
						"right": "var:preset|spacing|30",
						"top": "var:preset|spacing|30",
						"left": "var:preset|spacing|30"
					}
				}
			},
			"core/separator": {
				"border": {
					"width": "1px"
				}
			},
			"core/site-title": {
				"typography": {
					"fontStyle": "normal",
					"fontSize": "var:preset|font-size|large"
				},
				"color": {
					"text": "var:preset|color|white"
				}
			}
		},
		"elements": {
			"button": {
				"color": {
					"background": "var:preset|color|secondary"
				},
				":hover": {
					"color": {
						"text": "var:preset|color|white",
						"gradient": "var:preset|gradient|luminous-vivid-amber-to-luminous-vivid-orange"
					}
				},
				":focus": {
					"color": {
						"gradient": "var:preset|gradient|luminous-vivid-amber-to-luminous-vivid-orange",
						"text": "var:preset|color|white"
					}
				},
				":active": {
					"color": {
						"gradient": "var:preset|gradient|luminous-vivid-amber-to-luminous-vivid-orange",
						"text": "var:preset|color|white"
					}
				}
			},
			"h5": {
				"typography": {
					"fontWeight": "300"
				}
			},
			"heading": {
				"color": {
					"text": "var:preset|color|contrast"
				},
				"typography": {
					"fontWeight": "400"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|accent"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":active": {
					"color": {
						"text": "var:preset|color|accent"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"spacing": {
			"blockGap": "var:preset|spacing|60",
			"padding": {
				"top": "0",
				"right": "var:preset|spacing|40",
				"bottom": "0",
				"left": "var:preset|spacing|40"
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|lato",
			"fontSize": "var:preset|font-size|medium"
		},
		"color": {
			"background": "var:preset|color|white"
		}
	}
}
